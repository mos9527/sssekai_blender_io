    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Test Private A (Offline)",
            "type": "debugpy",
            "request": "launch",
            "module": "tests.private_test_a",
            "justMyCode": false
        },
        {
            "name": "Python Debugger: Test Mesh (Offline)",
            "type": "debugpy",
            "request": "launch",
            "module": "tests.test_mesh",
            "justMyCode": false
        },
        {
            "name": "Python Debugger: Asset Loader Test",
            "type": "debugpy",
            "request": "launch",
            "module": "tests.test_animation",
            "justMyCode": false
        },
        {
            "name": "Python Debugger: i18n AST Codegen",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/translations_codegen.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python Debugger: Run Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": ["-v","-s"],   
            "justMyCode": false         
        },
        {
            "name": "Python Debugger: inv_crc32.py",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/scripts/inv_crc32.py",
        }
    ]
}